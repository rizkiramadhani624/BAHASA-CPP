using namespace std;

int main()
{
  cout <<"============================================================================= \n";
  cout <<"=============== Operator Post-decrement dan Pre-decrement C++ =============== \n";
  cout <<"============================================================================= \n";
  cout << "\n";

  int a = 7;
  cout << "Post Decrement" << endl;
  cout << "Isi variabel a: " << a << endl;
  cout << "Isi variabel a: " << a-- << endl;
  cout << "Isi variabel a: " << a << endl;

  cout << endl;

  int b = 8;
  cout << "Pre Decrement" << endl;
  cout << "Isi variabel b: " << b << endl;
  cout << "Isi variabel b: " << --b << endl;
  cout << "Isi variabel b: " << b << endl;

  return 0;
}
