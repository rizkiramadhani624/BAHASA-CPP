using namespace std;

int main()
{
  string var1 = "Belajar C++ di Massachusetts Institute of Technology";
  string var2 = "Semangat!!";
  string var3 = "JIka kau tidak tahan lelahnya belajar, maka kau harus menaggung pahitnya kebodohan";

  cout << "Panjang string var1 adalah " << var1.length() <<endl;
  cout << "Panjang string var2 adalah " << var2.length() <<endl;
  cout << "Panjang string var3 adalah " << var3.size() <<endl;

  return 0;
}
