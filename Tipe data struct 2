using namespace std;
 
struct Mahasiswa {
  string nama;
  string universitas;
  unsigned int uangSaku;
};
 
int main()
{
  struct Mahasiswa Mahasiswa01;
 
  cout << "==++ Pendaftaran Mahasiswa Baru ++==" << endl;
  cout << "Nama: ";
  getline(cin,Mahasiswa01.nama);
 
  cout << "Universitas: ";
  getline(cin,Mahasiswa01.universitas);
 
  cout << "Uang saku: ";
  cin >> Mahasiswa01.uangSaku;
 
  cout << endl;
 
  cout << Mahasiswa01.nama <<" Kuliah di " << Mahasiswa01.universitas;
  cout << " dengan uang saku " << Mahasiswa01.uangSaku << " per hari" << endl;
 
  return 0;
}
