*/

using namespace std;

int main()
{
  cout <<"============================================================================= \n";
  cout <<"=============== Operator Pre-Increment dan Post-Increment C++ =============== \n";
  cout <<"============================================================================= \n";
  cout << "\n";

  int a = 8;
  cout << "Post Increment" << endl;
  cout << "Isi variabel a: " << a << endl;
  cout << "Isi variabel a: " << a++ << endl;
  cout << "Isi variabel a: " << a << endl;

  cout << endl;

  int b = 9;
  cout << "Pre Increment" << endl;
  cout << "Isi variabel b: " << b << endl;
  cout << "Isi variabel b: " << ++b << endl;
  cout << "Isi variabel b: " << b << endl;

  return 0;
}
